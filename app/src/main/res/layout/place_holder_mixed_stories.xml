<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5dp"
    android:background="@color/basicBackground">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_7dp"
        android:layout_marginEnd="@dimen/_7dp"
        app:cardCornerRadius="20dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:background="@color/placeHolderBackground"
                />

            <TextView
                android:id="@+id/newsfeed_content"
                android:layout_margin="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:layout_below="@+id/image"
                android:background="@color/placeHolderBackground"/>

            <TextView
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/newsfeed_content"
                android:background="@color/placeHolderBackground"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>