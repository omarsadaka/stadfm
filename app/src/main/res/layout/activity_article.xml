<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/basicBackground"
    tools:context="com.organizers_group.stadfm.Activities.MoreStoriesActivity">

    <RelativeLayout
        android:id="@+id/headerArticleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradient"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/articleNavBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_8dp"
                android:src="@drawable/back_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="@string/article"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_book"/>

            <ImageView
                android:id="@+id/articleSearch"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_weight="1"
                android:padding="@dimen/_5dp"
                android:layout_margin="@dimen/_8dp"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/search_icon" />
        </LinearLayout>

    </RelativeLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmer_notified"
        android:layout_below="@+id/headerArticleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:shimmer_animation_duration="1200">

        <!-- Adding 7 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/place_holder_layout" />
            <include layout="@layout/place_holder_layout" />
            <include layout="@layout/place_holder_layout" />
            <include layout="@layout/place_holder_layout" />
            <include layout="@layout/place_holder_layout" />

        </LinearLayout>

    </io.supercharge.shimmerlayout.ShimmerLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/articleRecyclerView"
        android:layout_below="@+id/headerArticleLayout"
        android:scrollbars="horizontal"
        android:padding="@dimen/_5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
