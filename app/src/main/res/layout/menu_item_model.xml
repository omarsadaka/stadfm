<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:paddingStart="@dimen/_10dp"
    android:paddingEnd="@dimen/_10dp">

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/dismissBtn"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/_15sp"
        android:paddingEnd="@dimen/_7dp"
        android:hint="@string/add_topic"
        android:textSize="15sp"
        android:lines="1"
        android:textAllCaps="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/dismissBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/custom_text_background_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingTop="@dimen/_5dp"
        android:paddingBottom="@dimen/_5dp"
        android:gravity="center"
        android:layout_gravity="end"
        android:background="@drawable/shape_dismiss"
        android:text="@string/dismiss"
        android:textScaleX="1.0"
        android:textAllCaps="true"
        android:textColor="@color/end_color"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:fontFamily="@font/avenir_book"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>